@model IEnumerable<ExemploSession.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-top: 0;
        }

        p {
            text-align: center;
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            background-color: #4caf50;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .button:hover {
                background-color: #45a049;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .table th,
            .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #f2f2f2;
                font-weight: bold;
            }

            .table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .table td a {
                color: #333;
                text-decoration: none;
                margin-right: 8px;
            }

                .table td a:hover {
                    color: #4caf50;
                }

        .hidden-password {
            display: inline-block;
            padding: 4px 8px;
            background-color: #f2f2f2;
            color: #666;
            border-radius: 4px;
            font-style: italic;
        }
    </style>
</head>
<body>
    <h1>Index</h1>
    <p>
        <a class="btn btn-primary" href="#">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>UsuarioId</th>
                <th>Senha</th>
                <th>Nome</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
                    <td><span class="hidden-password">******</span></td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href="#" class="btn btn-primary edit-link">Edit</a>
                        <a href="#" class="btn btn-secondary details-link">Details</a>
                        <a href="#" class="btn btn-danger delete-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
 
